# Example terraform.tfvars file
# Copy this file to terraform.tfvars and customize as needed

# AWS Configuration
aws_region = "us-west-2"

# Cluster Configuration
cluster_name = "minimal-eks-cluster"
cluster_version = "1.30"

# Node Group Configuration
node_group_name = "minimal-node-group"
node_instance_types = ["t3.small"]
node_capacity_type = "SPOT"  # Use "ON_DEMAND" for guaranteed capacity

# Scaling Configuration
node_desired_size = 1
node_max_size = 2
node_min_size = 1

# Monitoring Configuration
enable_container_insights = true  # Set to false to disable CloudWatch Container Insights

# Tags
tags = {
  Environment = "dev"
  Project     = "minimal-eks"
  ManagedBy   = "opentofu"
  Owner       = "your-name"
}
